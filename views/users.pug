extends utils/layout

block content
  if users.length
    table.u-full-width

      thead
        tr
          th Username
          th Name
          th Email
          th
          th

      tbody
        each user in users
          tr
            td= user.username
            td= user.name
            td= user.email
            td: a(href='/users/edit/' + user.id) Edit
            td: a(href='/users/remove/' + user.id)#remove Remove

  a.button.button-primary(href='/users/add') Add user
